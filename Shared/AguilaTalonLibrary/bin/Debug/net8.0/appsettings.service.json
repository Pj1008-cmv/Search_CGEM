{
    "AllowedHosts": "*",
    "Logging": {
        "LogLevel": {
            "Default": "Trace",
            "Microsoft": "Warning",
            "Microsoft.AspNetCore.Server.Kestrel": "Error",
            "Microsoft.Hosting.Lifetime": "Information",
            "Grpc": "Information",
            "System.Net.Http.HttpClient": "Warning"
        },
        "Console": {
            "LogLevel": {
                "Default": "None",
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "Grpc": "Information"
            }
        }
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File",
            "Serilog.Enrichers.Thread",
            "Serilog.Expressions"
        ],
        "MinimumLevel": {
            "Default": "Verbose",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.AspNetCore.Server.Kestrel": "Error",
                "Microsoft.Hosting.Lifetime": "Information",
                "Grpc": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "Logger",
                "Args": {
                    "configureLogger": {
                        "Filter": [
                            {
                                "Name": "ByExcluding",
                                "Args": {
                                    "expression": "StartsWith(SourceContext, 'PythonLog') or StartsWith(SourceContext, 'SerialLog') or StartsWith(SourceContext, 'ItuffLog')"
                                }
                            }
                        ],
                        "WriteTo": [
                            {
                                "Name": "File",
                                "Args": {
                                    "path": "C:\\ProgramData\\Aguila\\TplSequencerServiceLog.txt",
                                    "formatter": {
                                        "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                                        "template": "{@t:yyyy-MM-dd HH:mm:ss.fff} {#if Length(SourceContext) < 41}{SourceContext,-40}{#else}{Substring(SourceContext, 0, 37)}...{#end} [{@l:u1}] {@m}\n"
                                    },
                                    "rollOnFileSizeLimit": "true",
                                    "fileSizeLimitBytes": "52428800",
                                    "retainedFileCountLimit": 2
                                }
                            }
                        ]
                    }
                }
            }
        ],
        "Enrich": [ "WithThreadId" ]
    },
    "grpcPort": 54802,
    "webApiPort": 54803,
    "Install": {
        "BusinessDomain": "PPV",
        "EnvironmentType": "Factory",
        "EotPreAlertAdvanceTimeMs": 30000
    },
    "ApplicationInsights": {
        //Aguila_Runtetime_Production
        "ConnectionString": "InstrumentationKey=262d6d04-8e1d-424e-85fc-ef161dde6fc4;IngestionEndpoint=https://westus2-2.in.applicationinsights.azure.com/;LiveEndpoint=https://westus2.livediagnostics.monitor.azure.com/",
        //Aguila_Runtetime_Dev
        //"ConnectionString": "InstrumentationKey=eef6ac33-c952-4972-95de-adcf4acaf52e;IngestionEndpoint=https://westus2-2.in.applicationinsights.azure.com/;LiveEndpoint=https://westus2.livediagnostics.monitor.azure.com/",
        "StorageFolder": ".\\UnsentTelemetry"
    }
}
